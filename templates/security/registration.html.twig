{% extends "base.html.twig" %}

{% block title 'Se connecter' %}
{% block body %}
   
   <div class="container">
    <h1> Inscription</h1>

    {{ form_start(form) }}

        {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'username'}}) }}
        {{ form_row(form.email, {'attr': {'placeholder': 'saisissez votre email'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'saisir password'}}) }}
        {{ form_row(form.confirm_password,{'label': 'Confirmer mot de passe', 'attr': {'placeholder': 'confirmez votre password'}}) }}

        <button type="submit" class="btn btn-success">Enregistrer</button>
    {{ form_end(form) }}
   </div>
   


{% endblock %}